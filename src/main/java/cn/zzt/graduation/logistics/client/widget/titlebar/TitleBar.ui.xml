<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:wight="urn:import:cn.zzt.graduation.logistics.client.widget">
	<ui:style>
	.titlebar{
		width: 9.2rem;
		height: 1.306rem;
		line-height: 1.306rem;
		padding: 0.533rem 0.4rem 0 0.4rem;
		color: #333;
	}
	.rightbtn{
		color: #999;
	}
	</ui:style>
	<ui:with type="cn.easysw.mobileframework.client.theme.XBFlexAppearance" field="appearance"></ui:with>
		
	<g:FlowPanel addStyleNames="{appearance.css.flexH},{appearance.css.flexVC},{appearance.css.flexHSB},{style.titlebar}">
		<wight:button.BackIcon ui:field="backbtn" />
		<g:HTML ui:field="titlehtml"/>
		<g:HTML ui:field="rightbtn" addStyleNames="{style.rightbtn}"/>
	</g:FlowPanel>
</ui:UiBinder> 