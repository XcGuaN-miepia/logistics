<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:widget="urn:import:cn.zzt.graduation.logistics.client.widget">
	<ui:style>
	.input {
		margin: 0.133rem;
	}
	
	.btn {
		width: 9.2rem;
		height: 1.066667rem;
		color: #fff;
		border: none;
		border-radius: 0.106667rem;
		margin-top: 1.466667rem;
		background: #63B8FF;
	}
	</ui:style>
	<ui:with field="appearance" type="cn.zzt.graduation.logistics.client.theme.FlexAppearance"></ui:with>
	

	<g:FlowPanel addStyleNames="{appearance.css.flexV},{appearance.css.flexVC}">
		<widget:input.PhoneNoInput ui:field="telInput"
			addStyleNames="{style.input}" />
		<widget:input.PasswordInput ui:field="pwdInput"
			eyeVisible="true" addStyleNames="{style.input}" />
		<g:Button ui:field="login" text="登录" addStyleNames="fontsize28,{style.btn}"/>
		<g:Button ui:field="register" text="注册" addStyleNames="fontsize28,{style.btn}"/>
		
		<g:Button ui:field="change" text="切换用户"/>
		
	</g:FlowPanel>

</ui:UiBinder> 