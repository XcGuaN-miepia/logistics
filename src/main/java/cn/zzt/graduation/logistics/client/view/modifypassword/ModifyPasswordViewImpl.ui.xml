<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:widget="urn:import:cn.zzt.graduation.logistics.client.widget">
	<ui:style>
	.input {
		margin: 0.133rem;
	}
	.btn {
		width: 9.2rem;
		height: 1.066667rem;
		color: #fff;
		border: none;
		border-radius: 0.106667rem;
		margin-top: 1.466667rem;
		background: #63B8FF;
	}
	</ui:style>
	<ui:with type="cn.easysw.mobileframework.client.theme.XBFlexAppearance" field="flex"></ui:with>
	<g:FlowPanel addStyleNames="{flex.css.flexV},{flex.css.flexVC}">
	<widget:input.PasswordInput ui:field="oldPasswd" addStyleNames="{style.input}" placeHolder="请输入旧密码" eyeVisible="true"/>
	<widget:input.PasswordInput ui:field="newPasswd" addStyleNames="{style.input}" placeHolder="请输入新密码" eyeVisible="true"/>
	<widget:input.PasswordInput ui:field="newPasswd2" addStyleNames="{style.input}" placeHolder="请重新输入新密码" eyeVisible="true"/>
	
	<g:Button text="修改密码" ui:field="modifyPasswdBtn" addStyleNames="fontsize28,{style.btn}"/>
	
	</g:FlowPanel>
</ui:UiBinder> 